<style>
    .tile-shown {
        opacity: 1 !important;
        margin-left: 0px !important;
    }

    .tile {
        height: 110px;
        width: 100%;
        background: #99CA42;
        border: 2px solid #313131;
        cursor: pointer;
        -webkit-transition: all 0.3s ease-out;
        opacity: 0;
        margin-left: 60px;
        position: relative;
    }

    .txt {
        color: #f2f2f2;
        display: block;
        text-align: center;
        font-size: 35px;
        margin-top: 25px;
    }

    .tile:hover {
        border-color: #fcfcfc;
    }

    .tile-blue {
        background-color: #58BEEA;
    }

    .tile-2 {
        height: 220px;
    }

    .tile-3-1 {
        height: 110px;
        width: 100%;
    }

    .tiles_parent {
        margin-right: 14px;
        width: 32%;
    }

    .highlight {
        height: 20px;
        background: rgba(255,255,255,.6);
        position: inherit;
        top: 220px;
        -webkit-transition: all 0.3s ease-out;
        opacity: 0;
    }

    .highlight-over {
        top: -36px;
        opacity: 1;
    }
</style>
<script>


    $(document).ready(function () {


        $('.tile').each(function (i, v) {

            setTimeout(function () {
                $(v).addClass('tile-shown');
            },i*50);

        })
    });
</script>
